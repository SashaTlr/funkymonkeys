
<div id = "survey-header-information">
  <h3>Survey Name: <%=@survey.name%></h3>
  <h3>Survey Description: <%=@survey.description%></h3>
  <h3>Created At: <%=@survey.created_at%></h3>
</div>

<div id = "questions-container">
  <%= erb :"questions/_new", layout: false%>
</div>

<div id = "questions-show-container">

  <%@survey.questions.each do |question|%>
    <h4>
      <div id = "questions-edit-container">
      <%= erb :"questions/_edit", layout: false, locals: {:question => question}%>
      </div>
      </h4>
    <ul>
      <%question.options.each do |option| %>
      <li>
        <div id = "options-edit-container">
        <%= erb :"options/_edit", layout: false, locals: {:option => option}%>
        </div>
      </li>
      <%end%>
    </ul>
  <%end%>

</div>





