<div id = "survey-header-information">
  <h3>Survey Name: <%=@survey.name%></h3>
  <h3>Survey Description: <%=@survey.description%></h3>
  <h3>Created At: <%=@survey.created_at%></h3>
</div>

<div id = "questions-container">
  <%= erb :"questions/_new", layout: false%>
</div>

<div id = "questions-show-container">

  <%@survey.questions.each do |question|%>
    <h4>
      <div id = "questions-edit-container">
        <p><%=question.text%></p>
        <a id = "question_link" href = "/question/<%=question.id%>/edit">[edit question]</a>
        <form class = "delete-question-form" method = "post" action =  "/question/<%=question.id%>">
          <input type="hidden" name="question[id]" value="<%=question.id%>">
          <input type="hidden" name="_method" value="delete">
          <input type = "submit" value = "Delete Question" >
        </form>
      </div>

      </h4>
    <ul>
      <%question.options.each do |option| %>
      <li>
        <div id = "options-edit-container">
        <%= erb :"options/_edit", layout: false, locals: {:option => option, :question => question}%>
        </div>
      </li>
      <%end%>
    </ul>
  <%end%>

</div>





